{
    "compilerOptions": {
        "outDir": "./lib",
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es2017",
        "stripInternal": true,
        "removeComments": true,
        "declarationMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
